@model SPV.BE.SolicitudPersonalBE

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Aprobar Solicitud de Personal</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        @Html.HiddenFor(m => m.CodigoSol)
        <div class="form-horizontal">
            <div class="form-group row">
                @Html.LabelFor(m => Model.CodigoInterno, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.CodigoInterno, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => Model.Comentarios, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextAreaFor(m => m.Comentarios, new { @class = "form-control required", @rows = 10, @style = "width:290px;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <h3>
                        <span class="label label-danger">
                            ¿Está seguro que desea aprobar la solicitud?
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value="Si" />
        <button class="btn btn-danger" data-dismiss="modal">No</button>
    </div>
}
