@model SPV.BE.CargoBE

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Detalle Cargo</h3>
</div>

<div class="modal-body">

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => Model.Descripcion, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.Funciones, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextAreaFor(m => m.Funciones, new { @class = "form-control required", @disabled = "disabled", @rows = 5})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.Requisitos, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextAreaFor(m => m.Requisitos, new { @class = "form-control required", @disabled = "disabled", @rows = 5 })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.SueldoMin, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.SueldoMin, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.SueldoMax, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.SueldoMax, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal">Cerrar</button>
</div>
