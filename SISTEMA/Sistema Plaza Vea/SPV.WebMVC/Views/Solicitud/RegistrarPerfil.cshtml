@model SPV.BE.SolicitudPerfilBE

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Agregar Perfil</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(model => model.Perfil, new { @class = "control-label col-sm-3" })
                <div class="col-md-9">
                    <select class="form-control selectpicker" name="cboPerfil" id="cboPerfil" style="width:280px"></select>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Requisitos, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Requisitos, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Requisitos,"", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Funciones, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Funciones, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Funciones, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Sueldo, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Sueldo, new { maxlength = 15, @class = "form-control required" , @type = "number", min = "1" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Sueldo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => Model.CantidadSolicitudPer, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.CantidadSolicitudPer, new { maxlength = 3, @class = "form-control required" , @type = "number", min = "1", step = "1" })
                    <div>
                        @Html.ValidationMessageFor(m => m.CantidadSolicitudPer, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>

        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Content/image/Wait.gif" alt="Espere"/>
                Espere..
            </span>

            <input class="btn btn-primary" type="submit" value="Grabar" id="btnGrabar1"/>
            <button class="btn btn-danger" data-dismiss="modal">Cancelar</button>
        </div>
}
<script>
        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");

        $(document).ready(function () {
            cargarPerfiles();

            $("#btnGrabar1").click(function () {
                if ($("#cboPerfil").val() == "0") {
                    alert("Seleccionar Perfil");
                    return false;
                }
            });
        });

        function cargarPerfiles() {
            $.get('@Url.Action("ListaPerfiles", "Solicitud")')
            .done(function (data) {
                $('#cboPerfil').append('<option value="0">--Seleccione--</option>');
                $.each(data, function (i, row) {
                    var $option = $('<option>');
                    $option.val(row.CodPerfil);
                    $option.html(row.Perfil);
                    $('#cboPerfil').append($option);
                })
            })
            .fail(function (data) {
                console.log('error');
            });
        }

        $("#Sueldo").on("keyup", function () {
            var valid = /^\d{0,4}(\.\d{0,2})?$/.test(this.value),
                val = this.value;

            if (!valid) {
                console.log("Invalid input!");
                this.value = val.substring(0, val.length - 1);
            }
        });

</script>