@model SPV.BE.SolicitudPersonalBE

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Ver Observación</h3>
</div>

<div class="modal-body">

    <div class="form-horizontal">
        <div class="form-group row">
            @Html.LabelFor(m => Model.CodigoInterno, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.CodigoInterno, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => Model.Comentarios, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextAreaFor(m => m.Comentarios, new { @class = "form-control required", @disabled = "disabled", @rows = 10, @style = "width:290px;" })
            </div>
        </div>

    </div>
</div>


<div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal">Cerrar</button>
</div>